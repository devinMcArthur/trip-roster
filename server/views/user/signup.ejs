<% var title = 'Signup' %>
<% include ../partial/head %>
<script src="/js/signup.js"></script>

<div class="ui center aligned middle aligned grid segment" style="margin-top: 15vh;">
  <div class="column">
    <h2 class="ui image header" style="color: green;" >
      <img src="/assets/images/ooaa_logo.png" class="image">
      <div class="content">
        Create an account
      </div>
    </h2>
    <form class="ui large form" action="/signup" method="post" >
      <div class="ui stacked segment">
        <label style="float: left;">Name</label>
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input id="name-form" type="text" name="name" placeholder="Full Name">
          </div>
        </div>
        <div class="field">
          <label style="float: left;">Email</label>
          <div class="ui left icon input">
            <i class="at icon"></i>
            <input id="email-form" type="email" name="email" placeholder="Email">
          </div>
        </div>
        <div class="field">
          <label style="float: left;">Password</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input id="password-form" type="password" name="password" placeholder="Password">
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i id="confirm-icon" class="lock open icon"></i>
            <input id="confirm-form" type="password" name="confirm" placeholder="Confirm Password">
          </div>
        </div>
        <label style="float: left;"><b>Association</b></label>
        <div class="field">
          <div class="ui fluid search selection dropdown">
            <input type="hidden" name="association">
            <i class="dropdown icon"></i>
            <div class="default text">Select Association</div>
            <div class="menu">
              <% if (typeof associationArray != 'undefined') { %>
                <div class="item" data-value=""> * No Association (I want to register my own) * </div>
                <% for (var i in associationArray) { %>
                  <div class="item" data-value="<%= i %>"><%= associationArray[i].name %></div>
                <% } %>
              <% } else { %>
                <div class="item" data-value="">We were unable to retreive any associations, please try again</div>
              <% } %>
            </div>
          </div>
        </div>
        <div id="submit-button" class="ui fluid black large submit button disabled" style="background-color: green;">Signup!</div>
      </div>

    </form>

    <div class="ui message">
      Already have an account? <a href="/login">Login</a>
    </div>
  </div>
</div>

<% include ../partial/foot %>